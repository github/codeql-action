{
  "name": "@ava/typescript",
  "version": "2.0.0",
  "description": "TypeScript provider for AVA",
  "engines": {
    "node": ">=12.22 <13 || >=14.16 <15 || >=15"
  },
  "files": [
    "index.js"
  ],
  "author": "Mark Wubben (https://novemberborn.net)",
  "repository": "avajs/typescript",
  "license": "MIT",
  "keywords": [
    "ava",
    "typescript"
  ],
  "scripts": {
    "test": "xo && c8 ava"
  },
  "dependencies": {
    "escape-string-regexp": "^4.0.0",
    "execa": "^5.0.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.7.1",
    "del": "^6.0.0",
    "typescript": "^4.2.4",
    "xo": "^0.38.2"
  },
  "c8": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "ava": {
    "files": [
      "!test/broken-fixtures/**"
    ],
    "timeout": "60s"
  },
  "xo": {
    "ignores": [
      "test/broken-fixtures"
    ],
    "rules": {
      "import/order": "off"
    }
  }
}